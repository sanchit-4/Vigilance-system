export interface Guard {
  id: string;
  name: string;
  contactInfo: string;
  baseSalary: number;
}

export interface InventoryItem {
  id: string;
  name: string;
  value: number;
  assignedTo?: string;
  status?: 'Available' | 'Assigned' | 'Damaged' | 'Lost';
}

export interface InventoryLog {
  id: string;
  guardId: string;
  itemId: string;
  status: 'Damaged' | 'Lost';
  deductedAmount: number;
  date: string;
}
