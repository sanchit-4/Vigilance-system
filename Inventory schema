CREATE TABLE Guards (
    id VARCHAR(10) PRIMARY KEY,
    name VARCHAR(100),
    contactInfo VARCHAR(20),
    baseSalary DECIMAL(10,2)
);

CREATE TABLE InventoryItems (
    id VARCHAR(10) PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    value DECIMAL(10,2) NOT NULL,
    status ENUM('Available', 'Assigned', 'Damaged', 'Lost') DEFAULT 'Available',
    assignedTo VARCHAR(10),
    FOREIGN KEY (assignedTo) REFERENCES Guards(id)
);

CREATE TABLE InventoryLog (
    id VARCHAR(20) PRIMARY KEY,
    guardId VARCHAR(10),
    itemId VARCHAR(10),
    status ENUM('Damaged', 'Lost'),
    deductedAmount DECIMAL(10,2),
    date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (guardId) REFERENCES Guards(id),
    FOREIGN KEY (itemId) REFERENCES InventoryItems(id)
);
