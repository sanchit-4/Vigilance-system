function assignItemToGuard(itemId: string, guardId: string, inventory: InventoryItem[]) {
  const item = inventory.find(i => i.id === itemId);
  if (!item || item.status !== 'Available') return false;

  item.assignedTo = guardId;
  item.status = 'Assigned';
  return true;
}

function reportItemIssue(
  itemId: string,
  status: 'Damaged' | 'Lost',
  inventory: InventoryItem[],
  logs: InventoryLog[]
) {
  const item = inventory.find(i => i.id === itemId);
  if (!item || !item.assignedTo) return false;

  item.status = status;

  const log: InventoryLog = {
    id: `log-${Date.now()}`,
    guardId: item.assignedTo,
    itemId: item.id,
    status,
    deductedAmount: item.value,
    date: new Date().toISOString(),
  };

  logs.push(log);
  return true;
}
